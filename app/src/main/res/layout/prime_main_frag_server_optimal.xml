<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/btn_location"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/prime_main_bg_btn_location"
    android:minHeight="40dp">

    <ImageView
        android:id="@+id/optimal_location"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="13dp"
        android:src="@drawable/prime_main_ic_optimal_location"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="W,20:17"
        app:layout_constraintHeight_min="18dp"
        app:layout_constraintHeight_percent="0.425"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/optimal_location_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="marquee"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:paddingTop="9dp"
        android:paddingBottom="11dp"
        android:singleLine="true"
        android:text="@string/prime_mainOptimalLocation"
        android:textColor="#707070"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/arrow"
        app:layout_constraintStart_toEndOf="@id/optimal_location"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/prime_main_location_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
